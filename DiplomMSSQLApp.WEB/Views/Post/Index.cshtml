@using DiplomMSSQLApp.WEB.Helpers
@model DiplomMSSQLApp.WEB.Models.PostListViewModel

@{
    ViewBag.Title = "Список должностей";
}

<h2>Список должностей</h2>

<p>
    @Html.ActionLink("Добавить должность", "Create", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Удалить все должности", "DeleteAll", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Преобразовать данные в Json", "ExportJson", null, new { @class = "btn btn-default" })
</p>

<p>
    @using (Html.BeginForm("TestCreate", "Post"))
    {
        <div>
            @Html.Label("Num", "Тест добавления должностей")
        </div>
        <input type="number" value=10 name="num" /><br />
        <input type="submit" value="Добавить" />
    }
</p>
<p>
    @using (Html.BeginForm("TestRead", "Post"))
    {
        <div>
            @Html.Label("Num", "Тест выборки должностей")
        </div>
        <input type="number" value=10 name="num" /><br />
        @Html.Label("Val", "MaxSalary >= ")
        <input type="number" value=55000 name="val" /><br />
        <input type="submit" value="Поиск" />
    }
</p>
<p>
    @using (Html.BeginForm("TestUpdate", "Post"))
    {
        <div>
            @Html.Label("Num", "Тест обновления должностей")
        </div>
        <input type="number" value=10 name="num" /><br />
        <input type="submit" value="Обновить" />
    }
</p>
<p>
    @using (Html.BeginForm("TestDelete", "Post"))
    {
        <div>
            @Html.Label("Num", "Тест удаления должностей")
        </div>
        <input type="number" value=10 name="num" /><br />
        <input type="submit" value="Удалить" />
    }
</p>

@if (Model.Posts.Count() > 0)
{
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Posts.ElementAt(0).Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts.ElementAt(0).MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts.ElementAt(0).MaxSalary)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Posts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxSalary)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}

<p>
    @Html.Label("Count", "Количество должностей: " + Model.PageInfo.RealPages)
</p>

<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>
