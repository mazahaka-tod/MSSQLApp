@model DiplomMSSQLApp.WEB.Models.PostViewModel

@{
    ViewBag.Title = "Подробная информация о должности";
}

<h2>Подробная информация о должности</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MinSalary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MinSalary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaxSalary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaxSalary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Employees)
        </dt>

        @if (Model.Employees != null)
        {
            foreach (var item in Model.Employees)
            {
                <dd>
                    @item.LastName
                    @item.FirstName
                </dd>
            }
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
