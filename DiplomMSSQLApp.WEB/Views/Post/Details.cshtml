        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Employees)
        </dt>

        @if (Model.Employees != null) {
            foreach (var item in Model.Employees) {
                <dd>
                    @item.LastName
                    @item.FirstName
                </dd>
            }
        }
    </dl>
</div>
<br />
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
