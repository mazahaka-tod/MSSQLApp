@using DiplomMSSQLApp.WEB.Models
@model EmployeeViewModel

@{
    ViewBag.Title = "Подробная информация о сотруднике";
}

<h2>Подробная информация о сотруднике</h2>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PersonnelNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PersonnelNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Patronymic)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Patronymic)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HireDate)
        </dt>
        <dd>
            @Model.HireDate.ToString("dd MMMM yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Post.DepartmentId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.Department.DepartmentName)
        </dd>
    </dl>

    <hr /><p><b><i>Дата и место рождения</i></b></p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Birth.BirthDate)
        </dt>
        <dd>
            @Model.Birth.BirthDate.ToString("dd MMMM yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Birth.BirthPlace)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Birth.BirthPlace)
        </dd>
    </dl>

    <hr /><p><b><i>Паспорт</i></b></p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Passport.Series)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Passport.Series)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Passport.Number)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Passport.Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Passport.WhoIssued)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Passport.WhoIssued)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Passport.DateOfIssue)
        </dt>
        <dd>
            @if (Model.Passport.DateOfIssue.HasValue) {
                @Model.Passport.DateOfIssue.Value.ToString("dd MMMM yyyy");
            }
        </dd>
    </dl>

    <hr /><p><b><i>Контакты</i></b></p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Contacts.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contacts.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contacts.HomePhone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contacts.HomePhone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contacts.MobilePhone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contacts.MobilePhone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contacts.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contacts.Email)
        </dd>
    </dl>

    <hr /><p><b><i>Образование</i></b></p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Education.Level)
        </dt>
        <dd>
            @if (Model.Education.Level != Level.Нет) {
                @Html.DisplayFor(model => model.Education.Level);
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education.EducationalInstitution)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Education.EducationalInstitution)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education.Faculty)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Education.Faculty)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education.Specialization)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Education.Specialization)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education.YearEnd)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Education.YearEnd)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education.Qualification)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Education.Qualification)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education.EducationDocument)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Education.EducationDocument)
        </dd>
    </dl>

    <hr /><p><b><i>Список командировок</i></b></p>

    <dl class="dl-horizontal">
        <dt></dt>
        @if (Model.BusinessTrips != null) {
            foreach (var item in Model.BusinessTrips) {
                <dd>
                    @item.Name
                </dd>
            }
        }
    </dl>

    <hr /><p><b><i>Список отпусков</i></b></p>

    <dl class="dl-horizontal">
        <dt></dt>
        @if (Model.AnnualLeaves != null) {
            foreach (var item in Model.AnnualLeaves) {
                <dd>
                    @if (item.ActualDate.HasValue && item.ActualNumberOfDays.HasValue) {
                        @:<i>с</i> @item.ActualDate.Value.ToString("dd MMMM yyyy") <i>по</i> @item.ActualDate.Value.AddDays(item.ActualNumberOfDays.Value).ToString("dd MMMM yyyy")
                    }
                </dd>
            }
        }
    </dl>
</div>
<br />
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
</p>
