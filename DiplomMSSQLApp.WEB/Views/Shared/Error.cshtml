@model IEnumerable<string>

@{
    ViewBag.Title = "Ошибка";
}

<h2>Ошибка</h2>
<hr />

@if (Model != null) {
    <div class="alert alert-danger">
        @switch (Model.Count()) {
            case 0:
                @: Что-то пошло не так. Пожалуйста, попытайтесь еще раз
                break;
            case 1:
                @Model.First();
                break;
            default:
                @: Следующие ошибки были обнаружены:
                <ul>
                    @foreach (string error in Model) {
                        <li>@error</li>
                    }
                </ul>
                break;
        }
    </div>
}

<p>
    <img src=@Url.Content("~/Content/Animations/Error.gif") alt="" height="50" />
</p>
<p>
    @Html.ActionLink("На главную", "Index", "Organization", null, new { @class = "btn btn-default" })
</p>
